            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_recaudo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_recaudo)
                @Html.ValidationMessageFor(model => model.fecha_recaudo)
            </div>
            <p></p>

            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_llegada_comp_pago)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_llegada_comp_pago)
                @Html.ValidationMessageFor(model => model.fecha_llegada_comp_pago)
            </div>
            <p></p>

            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_solicitud_comp_pago)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_solicitud_comp_pago)
                @Html.ValidationMessageFor(model => model.fecha_solicitud_comp_pago)
            </div>
            <p></p>

            <div class="editor-label">
                <label>Adjuntos:</label>
            </div>
            <div class="editor-field">
                <input type="file" name="file" multiple="multiple" />
                <ul class="attachment">
                    @foreach (var item in Model.ArchivoOCs)
                    {
                        <li>
                            <a class="title" href="/OrdenCompras/Download/?p=@(item.Id + item.Extension)&d=@item.NombreArchivo">@item.NombreArchivo</a>
                            <a href="javascript:void(0);" data-id="@item.Id" class="deleteItem">X</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.notas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.notas)
            @Html.ValidationMessageFor(model => model.notas)
        </div>
        <p></p>
        <input type="submit" value="Guardar" class="btn btn-info" />
        <p></p>
    </fieldset>

    <div>
        <form method="post" action='@Url.Action("Index", "OrdenCompras")' />
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('.deleteItem').click(function (e) {
            e.preventDefault();
            var $ctrl = $(this);
            if (confirm('Borrar archivo adjunto?')) {
                $.ajax({
                    url: '@Url.Action("DeleteFile")',
                    type: 'POST',
                    data: { id: $(this).data('id') }
                }).done(function (data) {
                    if (data.Result == "OK") {
                        $ctrl.closest('li').remove();
                    }
                    else if (data.Result.Message) {
                        alert(data.Result.Message);
                    }
                }).fail(function () {
                    alert("Ha ocurrido un error");
                })

            }
        });        
</script>
}
