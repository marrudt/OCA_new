            </div>

            <div style="width:35%; float:left;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Comprador)
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Comprador, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Comprador)
