            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Total)
                <div class="editor-field">
                    @Html.EditorFor(model => model.Total, new { required = "required" })
                    @Html.ValidationMessageFor(model => model.Total)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Notas)
                <div class="editor-field">
                    @Html.EditorFor(model => model.Notas)
                    @Html.ValidationMessageFor(model => model.Notas)
                </div>
            </div>
        

            <div style="width:55%; float:left;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Adjudicado)
                    <div class="editor-field">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Adjudicado)
                            @Html.ValidationMessageFor(model => model.Adjudicado)
                        </div>
                    </div>
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Perdido)
                    <div class="editor-field">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Perdido)
                            @Html.ValidationMessageFor(model => model.Perdido)
                        </div>
                    </div>
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Cancelado)
                    <div class="editor-field">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Cancelado)
                            @Html.ValidationMessageFor(model => model.Cancelado)
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <p></p>
            <input type="submit" value="Guardar" class="btn btn-info" />
            <p></p>
    </fieldset>

    <div>
        <form method="post" action='@Url.Action("Index", "Eventos")' />
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('.deleteItem').click(function (e) {
            e.preventDefault();
            var $ctrl = $(this);
            if (confirm('Borrar archivo adjunto?')) {
                $.ajax({
                    url: '@Url.Action("DeleteFile")',
                    type: 'POST',
                    data: { id: $(this).data('id') }
                }).done(function (data) {
                    if (data.Result == "OK") {
                        $ctrl.closest('li').remove();
                    }
                    else if (data.Result.Message) {
                        alert(data.Result.Message);
                    }
                }).fail(function () {
                    alert("Ha ocurrido un error");
                })

            }
        });    
    </script>
}
