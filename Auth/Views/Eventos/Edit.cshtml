                </div>
            </div>

            <div style="width:20%; float:left;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Telefono)
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { required = "required" } })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>
                </div>
            </div>

            <div style="width:25%; float:left;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", @style = "text-transform:lowercase;width:280px", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
        </div>
