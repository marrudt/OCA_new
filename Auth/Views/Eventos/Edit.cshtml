            </div>
        </div>

        <div style="width:20%; float:left;">
            <div class="editor-label">
                @Html.LabelFor(model => model.OC)
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.OC, ViewBag.ListaOCs as SelectList, "Seleccione OC")
                    @Html.ValidationMessageFor(model => model.OC)
                </div>
            </div>
        </div>

        <div style="width:40%; float:left;">
            <div class="editor-label">
                @Html.LabelFor(model => model.Nit)
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Nit, ViewBag.ListaTerceros as SelectList, "Seleccione Cliente", new { required = "required" })
                    @Html.ValidationMessageFor(model => model.Nit)
                </div>
            </div>
        </div>

        <div style="width:20%; float:left;">
            <div class="editor-label">
                @Html.LabelFor(model => model.FechaSolicitud)
                <div class="editor-field">
                    @Html.EditorFor(model => model.FechaSolicitud, new { htmlAttributes = new { required = "required" } })
                    @Html.ValidationMessageFor(model => model.FechaSolicitud)
                </div>
            </div>
        </div>

        <div style="width:100%; float:left;">

            <div style="width:20%; float:left;">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Ciudad)
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.Ciudad, ViewBag.ListaCiudades as SelectList, "Seleccione Ciudad", new { style = "width:200px", required = "required" })
                        @Html.ValidationMessageFor(model => model.Ciudad)
