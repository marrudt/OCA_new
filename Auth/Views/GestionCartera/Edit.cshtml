@model Auth.Models.GestionCartera

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Editar Gestión de Cartera</legend>

        <div style="width:100%; float:left;">
            <div class="editor-label">
                @Html.LabelFor(model => model.OC)
                <div class="editor-field">
                    @Html.EditorFor(model => model.OC, new { htmlAttributes = new { @readonly = "readonly", @style = "width:100px" } })
                    @Html.ValidationMessageFor(model => model.OC)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.nit)
                <div class="editor-field">
                    @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @readonly = "readonly", @style = "width:450px" } })
                    @Html.ValidationMessageFor(model => model.nit)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.fecha_gestion, new { htmlAttributes = new { required = "required" } })
                    @Html.ValidationMessageFor(model => model.fecha_gestion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.contacto_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.contacto_gestion, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px", required = "required" } })
                    @Html.ValidationMessageFor(model => model.contacto_gestion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.telefono_contacto_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.telefono_contacto_gestion, new { htmlAttributes = new { @style = "width:100px" } })
                    @Html.ValidationMessageFor(model => model.telefono_contacto_gestion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.mail_contacto_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.mail_contacto_gestion, new { htmlAttributes = new { @style = "text-transform:lowercase;width:350px" } })
                    @Html.ValidationMessageFor(model => model.mail_contacto_gestion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.observacion_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.observacion_gestion)
                    @Html.ValidationMessageFor(model => model.observacion_gestion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.responsable_gestion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.responsable_gestion, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px", required = "required" } })
                    @Html.ValidationMessageFor(model => model.responsable_gestion)
                </div>
            </div>

        </div>
    </fieldset>

    <div class="editor-field">
        <input type="submit" value="Guardar" class="btn btn-info" />
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>

}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*@Scripts.Render("~/bundles/jqueryval")*@
}