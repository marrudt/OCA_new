@model Auth.Models.GestionCartera

@{
    ViewBag.Title = "Crear Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Crear Gestión Cartera</legend>

        @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.OC)
            <div class="editor-field">
                @Html.DropDownList("OC", new SelectList(ViewBag.ListaOCs, "OC", "OC"), "Seleccione OC", new { @style = "width:80px" })
                @Html.ValidationMessageFor(model => model.OC)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fecha_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_gestion)
                @Html.ValidationMessageFor(model => model.fecha_gestion)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.contacto_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.contacto_gestion, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px" } })
                @Html.ValidationMessageFor(model => model.contacto_gestion)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.telefono_contacto_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.telefono_contacto_gestion, new { htmlAttributes = new { @style = "width:100px" } })
                @Html.ValidationMessageFor(model => model.telefono_contacto_gestion)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.mail_contacto_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.mail_contacto_gestion, new { htmlAttributes = new { @style = "text-transform:lowercase;width:350px" } })
                @Html.ValidationMessageFor(model => model.mail_contacto_gestion)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.observacion_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.observacion_gestion)
                @Html.ValidationMessageFor(model => model.observacion_gestion)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.responsable_gestion)
            <div class="editor-field">
                @Html.EditorFor(model => model.responsable_gestion, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px" } })
                @Html.ValidationMessageFor(model => model.responsable_gestion)
            </div>
        </div>

        <p>
            <div class="editor-field">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </p>

    </fieldset>

    <div>
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*@Scripts.Render("~/bundles/jqueryval")*@
}

