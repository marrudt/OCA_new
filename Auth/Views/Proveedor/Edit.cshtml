@model Auth.Models.Proveedor

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Editar Proveedor</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nit)
            <div class="editor-field">
                @Html.EditorFor(model => model.nit)
                @Html.ValidationMessageFor(model => model.nit)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nombres)
            <div class="editor-field">
                @Html.EditorFor(model => model.nombres)
                @Html.ValidationMessageFor(model => model.nombres)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.activo)
            <div class="editor-field">
                <div class="checkbox">
                    @Html.EditorFor(model => model.activo)
                    @Html.ValidationMessageFor(model => model.activo)
                </div>
            </div>
        </div>
    </fieldset>

    <div class="editor-field">
        <input type="submit" value="Guardar" class="btn btn-info" />
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
