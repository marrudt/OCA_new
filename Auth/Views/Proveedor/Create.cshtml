@model Auth.Models.Proveedor

@{
    ViewBag.Title = "Crear Nuevo";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Crear Proveedor</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.nit)
            <div class="editor-field">
                @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @style = "width:80px" } })
                @Html.ValidationMessageFor(model => model.nit)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nombres)
            <div class="editor-field">
                @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @style = "text-transform:uppercase;width:350px" } })
                @Html.ValidationMessageFor(model => model.nombres)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.activo)
            <div class="editor-field">
                <div class="checkbox">
                    @Html.EditorFor(model => model.activo)
                    @Html.ValidationMessageFor(model => model.activo)
                </div>
            </div>
        </div>

        <p>
            <div class="editor-field">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </p>

    </fieldset>

    <div>
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*@Scripts.Render("~/bundles/jqueryval")*@
}

