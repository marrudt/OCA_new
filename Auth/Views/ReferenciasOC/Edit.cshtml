@model Auth.Models.ReferenciasOC

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Editar Concepto Proveedor</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.codigo)
            <div class="editor-field">
                @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @readonly = "readonly", style = "width:50px" } })
                @Html.ValidationMessageFor(model => model.codigo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.descripcion)
                <div class="editor-field">
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { style = "width:350px" } })
                    @Html.ValidationMessageFor(model => model.descripcion)
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.activo)
                <div class="editor-field">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.activo)
                        @Html.ValidationMessageFor(model => model.activo)
                    </div>
                </div>
            </div>
    </fieldset>

    <div class="editor-field">
        <input type="submit" value="Guardar" class="btn btn-info" />
        <input type="submit" class="btn btn-default" value="Ir al Listado" />
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
